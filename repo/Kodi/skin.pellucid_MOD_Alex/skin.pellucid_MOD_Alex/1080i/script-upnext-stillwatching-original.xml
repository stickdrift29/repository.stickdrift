<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">20</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <controls>
        <control type="group">
            <animation type="WindowOpen" reversible="false" condition="String.IsEqual(Window.Property(popup_position),top)">
                <effect type="fade" start="0" end="100" time="750" />
                <effect type="slide" start="0,-181" end="0,0" time="750"/>
            </animation>
            <animation type="WindowClose" reversible="false" condition="String.IsEqual(Window.Property(popup_position),top)">
                <effect type="fade" start="100" end="0" time="750" />
                <effect type="slide" start="0,0" end="0,-181" time="750" />
            </animation>
            <animation type="WindowOpen" reversible="false" condition="String.IsEqual(Window.Property(popup_position),centre)">
                <effect type="fade" start="0" end="100" time="750" />
                <effect type="slide" end="0,450" time="0"/>
            </animation>
            <animation type="WindowClose" reversible="false" condition="String.IsEqual(Window.Property(popup_position),centre)">
                <effect type="fade" start="100" end="0" time="750" />
            </animation>
            <animation type="WindowOpen" reversible="false" condition="String.IsEqual(Window.Property(popup_position),bottom)">
                <effect type="fade" start="0" end="100" time="750" />
                <effect type="slide" start="0,1261" end="0,899" time="750"/>
            </animation>
            <animation type="WindowClose" reversible="false" condition="String.IsEqual(Window.Property(popup_position),bottom)">
                <effect type="fade" start="100" end="0" time="750" />
                <effect type="slide" start="0,0" end="0,181" time="750" />
            </animation>
            <control type="group">
                <height>181</height>
                <!-- Background -->
                <control type="image">
                    <top>0</top>
                    <width>100%</width>
                    <height>181</height>
                    <texture colordiffuse="overlay">upnext/bg.png</texture>
                </control>
                <!-- Thumb -->
                <control type="group">
                    <top>20</top>
                    <left>20</left>
                    <control type="image">
                        <top>-2</top>
                        <left>-2</left>
                        <width>254</width>
                        <height>144</height>
                        <texture>upnext/shadow.png</texture>
                    </control>
                    <control type="image">
                        <width>250</width>
                        <height>141</height>
                        <texture colordiffuse="FF212121">white.png</texture>
                        <visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
                    </control>
                    <control type="textbox">
                        <top>10</top>
                        <left>10</left>
                        <width>230</width>
                        <height>121</height>
                        <font>font12</font>
                        <textcolor>DDFFFFFF</textcolor>
                        <shadowcolor>FF000000</shadowcolor>
                        <align>center</align>
                        <aligny>center</aligny>
                        <label>$INFO[Window.Property(tvshowtitle)]</label>
                        <visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
                    </control>
                    <control type="image">
                        <width>250</width>
                        <height>141</height>
                        <texture>$INFO[Window.Property(thumb)]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>!String.IsEmpty(Window.Property(thumb))</visible>
                    </control>
                    <control type="image">
                        <width>250</width>
                        <height>141</height>
                        <texture>$INFO[Window.Property(fanart)]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>String.IsEmpty(Window.Property(thumb)) + !String.IsEmpty(Window.Property(fanart))</visible>
                    </control>
                    <control type="image">
                        <width>250</width>
                        <height>141</height>
                        <texture>$INFO[Window.Property(landscape)]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(fanart)) + !String.IsEmpty(Window.Property(landscape))</visible>
                    </control>
                    <control type="progress" id="3014">
                        <width>250</width>
                        <top>136</top>
                        <height>5</height>
                        <reveal>true</reveal>
                        <righttexture></righttexture>
                        <overlaytexture></overlaytexture>
                        <lefttexture></lefttexture>
                        <texturebg colordiffuse="FF212121">masks/discsurface.png</texturebg>
                        <midtexture colordiffuse="$VAR[highlight]">masks/discsurface.png</midtexture>
                    </control>
                </control>
                <!-- Labels -->
                <control type="group">
                    <top>20</top>
                    <left>290</left>
                    <right>20</right>
                    <!-- Time -->
                    <control type="label">
                        <width>auto</width>
                        <height>35</height>
                        <left>290</left>
                        <aligny>center</aligny>
                        <font>font25_title</font>
                        <textcolor>DDFFFFFF</textcolor>
                        <shadowcolor>FF000000</shadowcolor>
                        <label>$ADDON[service.upnext 30035]</label>
                        <visible>Integer.IsLessOrEqual(Window.Property(remaining),60)</visible>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <height>35</height>
                        <aligny>center</aligny>
                        <font>font25_title</font>
                        <textcolor>DDFFFFFF</textcolor>
                        <shadowcolor>FF000000</shadowcolor>
                        <label>[B]$ADDON[service.upnext 30024][/B]</label>
                        <visible>true</visible>
                    </control>
                    <!-- Details -->
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
                        <height>35</height>
                        <top>40</top>
                        <itemgap>0</itemgap>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>DDFFFFFF</textcolor>
                            <shadowcolor>FF000000</shadowcolor>
                            <label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]   </label>
                            <visible>!String.IsEmpty(Window.Property(title))</visible>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>DDFFFFFF</textcolor>
                            <shadowcolor>FF000000</shadowcolor>
                            <label>$INFO[Window.Property(year),(,)   ]</label>
                            <visible>!String.IsEmpty(Window.Property(year))</visible>
                        </control>
                        <control type="image">
                            <width>19</width>
                            <height>19</height>
                            <aspect>keep</aspect>
                            <texture colordiffuse="$VAR[highlight]">upnext/star.png</texture>
                            <animation effect="slide" end="0,8" time="0" condition="true">Conditional</animation>
                            <visible>!String.IsEmpty(Window.Property(rating))</visible>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <label>$INFO[Window.Property(rating), ,   ]</label>
                            <font>font12</font>
                            <textcolor>DDFFFFFF</textcolor>
                            <shadowcolor>FF000000</shadowcolor>
                            <visible>!String.IsEmpty(Window.Property(rating))</visible>
                        </control>
                    </control>
                    <!-- Buttons -->
                    <control type="grouplist" id="20">
                        <orientation>horizontal</orientation>
                        <height>56</height>
                        <bottom>20</bottom>
                        <itemgap>10</itemgap>
                        <control type="button" id="3012">
                            <label>       $ADDON[service.upnext 30010]</label>
                            <visible>Integer.IsGreater(Window.Property(remaining),25)</visible>
                            <height>56</height>
                            <width min="50">auto</width>
                            <font>font20_title</font>
                            <textoffsetx>15</textoffsetx>
                            <textcolor>DDFFFFFF</textcolor>
                            <shadowcolor>FF000000</shadowcolor>
                            <aligny>center</aligny>
                            <align>center</align>
                            <texturefocus border="10" colordiffuse="$VAR[highlight]">upnext/button.png</texturefocus>
                            <texturenofocus border="10" colordiffuse="FF212121">upnext/button.png</texturenofocus>
                            <pulseonselect>no</pulseonselect>
                        </control>
                        <control type="button" id="3013">
                            <label>$INFO[Window.Property(stop_close_label)]</label>
                            <height>56</height>
                            <width min="50">auto</width>
                            <font>font20_title</font>
                            <textoffsetx>15</textoffsetx>
                            <textcolor>DDFFFFFF</textcolor>
                            <shadowcolor>FF000000</shadowcolor>
                            <aligny>center</aligny>
                            <align>center</align>
                            <texturefocus border="10" colordiffuse="$VAR[highlight]">upnext/button.png</texturefocus>
                            <texturenofocus border="10" colordiffuse="FF212121">upnext/button.png</texturenofocus>
                            <pulseonselect>no</pulseonselect>
                        </control>
						<control type="togglebutton" id="3015">
							<visible>String.IsEqual(Window.Property(shuffle_enable),True)</visible>
							<selected>String.IsEqual(Window.Property(shuffle_on),True)</selected>
                            <texturenofocus colordiffuse="DDFFFFFF">upnext/shuffle.png</texturenofocus>
                            <texturefocus colordiffuse="$VAR[highlight]">upnext/shuffle.png</texturefocus>
                            <alttexturenofocus colordiffuse="DDFFFFFF">upnext/shuffle.png</alttexturenofocus>
                            <alttexturefocus colordiffuse="$VAR[highlight]">upnext/shuffle.png</alttexturefocus>
							<width>56</width>
							<height>56</height>
						</control>
                    </control>
                    <control type="image">
                        <bottom>20</bottom>
                        <width>46</width>
                        <height>46</height>
                        <aspect>keep</aspect>
                        <texture colordiffuse="$VAR[Home]">upnext/nextupicons/00.png</texture>
                        <animation effect="slide" end="13,-5" time="0" condition="true">Conditional</animation>
                        <visible>Integer.IsGreater(Window.Property(remaining),25) + control.hasfocus(3012)</visible>
                    </control>
                    <control type="image">
                        <bottom>20</bottom>
                        <width>46</width>
                        <height>46</height>
                        <aspect>keep</aspect>
                        <texture colordiffuse="DDFFFFFF">upnext/nextupicons/00.png</texture>
                        <animation effect="slide" end="13,-5" time="0" condition="true">Conditional</animation>
                        <visible>Integer.IsGreater(Window.Property(remaining),25) + !control.hasfocus(3012)</visible>
                    </control>
                    <control type="grouplist">
                        <visible>!Window.IsVisible(extendedprogressdialog)</visible>
                        <animation effect="fade" time="150">VisibleChange</animation>
						<itemgap>40</itemgap>
                        <control type="label">
                            <font>font_clock</font>
							<align>right</align>
							<height>75</height>
                            <textcolor>DDFFFFFF</textcolor>
                            <shadowcolor>FF000000</shadowcolor>
                            <label>$INFO[System.Time]</label>
                        </control>
                        <control type="label">
							<font>font12</font>
							<align>right</align>
                            <label>$ADDON[service.upnext 30009]</label>
                            <textcolor>DDFFFFFF</textcolor>
                            <shadowcolor>FF000000</shadowcolor>
                            <visible>!String.IsEmpty(Window.Property(endtime))</visible>
                        </control>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
